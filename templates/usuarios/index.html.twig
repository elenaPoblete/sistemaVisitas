{% extends 'base.html.twig' %}

{% block title %}Usuarios index{% endblock %}

{% block body %}
    <h1>Sistema de Visitas</h1>

    <table class="table" >
        <thead>
            <tr>
                <th>Id</th>
                <th>Rut</th>
                <th>Nombre</th>
                <th>Apellidos</th>
                <th>Email</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for usuario in usuarios %}
            <tr>
                <td>{{ usuario.id }}</td>
                <td>{{ usuario.rut }}</td>
                <td>{{ usuario.nombre }}</td>
                <td>{{ usuario.apellidos }}</td>
                <td>{{ usuario.email }}</td>
                <td>
                    <a class="btn btn-success" href="{{ path('usuarios_show', {'id': usuario.id}) }}">Ver</a>
                    <a class="btn btn-warning"  href="{{ path('usuarios_edit', {'id': usuario.id}) }}">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a class="btn btn-primary"  href="{{ path('usuarios_new') }}" role="button" aria-controls="offcanvasExample">
    Crear un nuevo usuario
    </a>
{% endblock %}
